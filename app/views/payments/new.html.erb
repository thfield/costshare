<h1>New payment</h1>

<%= form_for(@payment) do |f| %>
  
  <div class="field">
    <%= f.label :transaction_date %><br>
    <%= f.text_field :transaction_date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
	<div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id, class: 'form-control', :value => current_user.id %>
  </div>
<div class="field">
    <%= f.label :event_id %><br>
    <%= f.text_field :event_id, class: 'form-control', :value => @event.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 

<%= link_to 'Back', payments_path %>
