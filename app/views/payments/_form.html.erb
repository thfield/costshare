<%= f.fields_for :payments, payment do |p| %>
        <%= p.text_field :transaction_date %>
        <%= p.text_field :amount %>
        <%= p.text_field :description %>
        <%= @event.users.find(payment.user_id).name %>
        <%= p.check_box :_destroy %>
        <%= p.label :_destroy, "Remove Payment" %>
        <br />
<% end %>        