<% provide(:title, @user.name) %>


<h1>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="span8">
    <% if @user.events.any? %>
      <h3>Events: (<%= @user.events.count %>)</h3>
      <ol class="events">
        
        <% @user.events.each do |event| %>
          <%= link_to event.name, event %>
          <% if event.user_id == current_user.id %>
            This is your event
          <% end %>

          <br />
        <% end %>

      </ol>
      <%= will_paginate @events %>
    <% end %>
  </div>
</div>
